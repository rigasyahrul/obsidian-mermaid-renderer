{
	"name": "obsidian-mermaid-renderer",
	"version": "1.0.0",
	"description": "Render Mermaid diagrams from mermaidjs code blocks in Obsidian",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"engines": {
		"node": "22.11.0",
		"npm": "10.0.0"
	},
	"keywords": ["obsidian", "plugin", "mermaid", "diagrams", "markdown"],
	"author": "Syahriga Syahrul",
	"license": "MIT",
	"dependencies": {
		"mermaid": "^11.0.0"
	},
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "^1.8.7",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"volta": {
		"node": "22.11.0",
		"npm": "10.0.0"
	}
}
